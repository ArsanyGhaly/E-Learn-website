        <form class="text-center border border-light p-5" method='post' action='/teachers/addclass' enctype="multipart/form-data">
      
          <input type="text" class="form-control mb-3" id="name" name="title" placeholder="The Class Title">
        
          <textarea name="desc" id="message" class="form-control mb-3" placeholder="description"></textarea>

          <input type="text" class="form-control mb-3" id="name" name="fees" placeholder="How Much">
         
          <input type="text" class="form-control mb-3" id="name" name="duration" placeholder="How long">

          <input type="text" class="form-control mb-3" id="name" name="num_students" placeholder="How many students" >

          <input type="text" class="form-control mb-3" id="name" name="period" placeholder="houres per week"> 
          
          <input type="date" id="start" class="form-control mb-3" name="start"
       value="<%= Date.now() %>"
       min="" max="" laceholder="Starting Date">
        
  <div class="custom-file">
    <input name="profileimage" type="file" class="custom-file-input" id="inputGroupFile01"
      aria-describedby="inputGroupFileAddon01">
    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
  </div>
  <br/>

          <button type="submit" value="send" class="btn btn-primary mt-0">Add Class</button>
      
        </form>
      </div>
      <div class="col-lg-5 mb-4 mb-lg-0">
